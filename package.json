    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
